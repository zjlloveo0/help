<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/iv_mission_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/mission_default" />

    <TextView
        android:id="@+id/tv_mission_point"
        android:text="奖励积分"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_mission_image"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_mission_title"
        android:text="标题"
        android:layout_below="@id/iv_mission_image"
        android:maxLines="1"
        android:layout_marginTop="3dp"
        android:layout_toStartOf="@id/tv_mission_point"
        android:layout_toLeftOf="@id/tv_mission_point"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingRight="0dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_mission_description"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:layout_below="@id/tv_mission_title"
        android:layout_marginTop="1dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#6D6D6D"
        android:layout_width="match_parent"
        android:layout_height="30sp" />

    <TextView
        android:text="王三"
        android:id="@+id/tv_mission_username"
        android:layout_alignBottom="@id/iv_mission_image"
        android:layout_marginTop="1dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:shadowColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>